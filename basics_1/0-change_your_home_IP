#!/usr/bin/env bash

# Esperar 1 segundo antes de intentar modificar el archivo (ajustar según sea necesario)
sleep 1

# Eliminar las líneas si existen
sed -i '/127.0.0.2 localhost/d' /etc/hosts
sed -i '/8.8.8.8 facebook.com/d' /etc/hosts

# Agregar las nuevas entradas
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts
